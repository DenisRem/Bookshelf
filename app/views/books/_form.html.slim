= simple_form_for @book do |f|

  = f.input :title, label: 'Title',
                   placeholder: 'Title',
                   input_html: { class: 'form-control' },
                   wrapper_html: { class: 'form-group.book-form' }

  = f.input :publishing_house, label: 'Publishing house',
                               placeholder: 'Publishing house',
                               input_html: { class: 'form-control' },
                               wrapper_html: { class: 'form-group.book-form' }

  = f.input :language, label: 'Language',
                       placeholder: 'Language',
                       input_html: { class: 'form-control' },
                       wrapper_html: { class: 'form-group.book-form' }

  = f.input :year_of_publication, label: 'Year of publication',
                                  placeholder: '****',
                                  input_html: { class: 'form-control' },
                                  wrapper_html: { class: 'form-group.book-form' }

  = f.input :number_of_pages, label: 'Number of pages',
                              placeholder: '****',
                              input_html: { class: 'form-control' },
                              wrapper_html: { class: 'form-group.book-form' }

  = f.input :format, label: 'Format',
                     placeholder: '***x***',
                     input_html: { class: 'form-control' },
                     wrapper_html: { class: 'form-group.book-form' }
                
  = f.input :binding, label: 'Binding',
                      placeholder: 'Binding',
                      input_html: { class: 'form-control' },
                      wrapper_html: { class: 'form-group.book-form' }

  = f.input :ISBN, label: 'ISBN',
                   placeholder: '*************',
                   input_html: { class: 'form-control' },
                   wrapper_html: { class: 'form-group.book-form' }

  = f.input :availability, label: 'Availability',
                           placeholder: 'Availability',
                           input_html: { class: 'form-control' },
                           wrapper_html: { class: 'form-group.book-form' }

  .form-group.book-form.mt-3
   = f.submit yield(:button_text), class: 'btn btn-primary'
   = link_to  yield(:cancel_btn_text), yield(:path),
                                            class: 'btn btn-outline-danger'
